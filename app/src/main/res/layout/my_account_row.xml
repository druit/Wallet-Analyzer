<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/background_myaccount_item"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:id="@+id/imageMyAccount"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_bank_account" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:textSize="9dp"
                android:layout_height="10dp"
                android:layout_marginStart="3dp"
                android:textAlignment="textStart"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
            <TextView
                android:id="@+id/mTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:text="Main Title"
                android:textAlignment="textStart"
                android:textColor="#E1E1E1"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mDescriptionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="#a9a9a9"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/mSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="1200â‚¬"
                android:textAlignment="textStart"
                android:textColor="@color/colorButtonLight"
                android:textSize="12sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginTop="2dp"
                android:focusable="false"
                android:focusableInTouchMode="false">
                <ImageButton
                    android:id="@+id/bank_deleteBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_bank_delete"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
                <ImageButton
                    android:id="@+id/bank_editBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_bank_edit"
                    android:focusable="false"
                    android:focusableInTouchMode="false"

                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>